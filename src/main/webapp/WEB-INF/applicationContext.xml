           </bean>
       </constructor-arg>
       <constructor-arg name="infoWindowAnchor">
           <bean class="java.awt.Point">
               <constructor-arg index="0" value="16"/>
               <constructor-arg index="1" value="32"/>
           </bean>
       </constructor-arg>       
       <constructor-arg name="iconSize">
